<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected = "true">
        <shape
            android:shape="rectangle"
            >
            <corners android:radius="4.5dp" />
            <gradient
                android:type="linear"
                android:startColor="#e9194d"
                android:endColor="#ff297e"
                android:angle="0" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners android:radius="4.5dp" />
            <gradient
                android:type="linear"
                android:angle="0" />
            <solid android:color = "#0dffffff"/>

        </shape>

    </item>

</selector>